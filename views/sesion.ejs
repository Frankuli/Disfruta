<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>INGRESA</title>
    <ng-include src= " 'plantillas/css.html'  "></ng-include>
    <link rel="stylesheet" href="css/todo.css">
    <link rel="stylesheet" href="css/sesion.css">
  </head>
  <body>
    <div class="form">
      <ul class="tab-group">
        <li class="tab active"><a href="#log">INICIAR SESIÓN</a></li>
        <li class="tab"><a href="#reg">REGISTRARSE</a></li>
      </ul>
      <div class="tab-content">
        <div id="log">
          <img src="img/LOGO.jpg" alt="">
          <form action="/sesion" method="post">
            <% if (typeof(status) == "string"){ if (status != 'true' && status != 'false'){  %>
                <p class="alert alert-danger"><%= status %> </p>
              <%}} %>
            <input type="text" name="email" value="" placeholder="Email">
            <input type="password" name="password" value="" placeholder="Contraseña">
            <button type="submit" name="button">INGRESAR</button>
          </form>
        </div>
        <div id="reg">
          <form action="/sesion" method="post">
            <input type="text" name="name" value="" placeholder="Nombre">
            <input type="text" name="fullName" value="" placeholder="Apellido">
            <input type="text" name="regEmail" value=""placeholder="Email">
            <input type="text" name="direccion" value="" placeholder="Dirección">
            <input type="text" name="telefono" value="" placeholder="Telefono">
            <input type="password" name="password" value="" placeholder="Contraseña">
            <input type="password" name="passwordConfirm" value="" placeholder="Confirme Contraseña">
            <button type="submit">REGISTRARSE</button>
          </form>
        </div>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.5/angular.min.js" > </script>
    <script src="js/app.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="js/sesion.js"></script>
  </body>
</html>
