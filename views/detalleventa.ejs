<!DOCTYPE html>
<html ng-app='includes'>
  <head>
    <meta charset="utf-8">
    <title>DETALLE VENTA</title>
    <ng-include src= " 'plantillas/css.html'  "></ng-include>
    <link rel="stylesheet" href="css/todo.css">
    <link rel="stylesheet" href="css/pedidosEstilos.css">
  </head>
  <body>
      <div class="col-md-1 "></div>
      <div class="col-md-10">
          <div class="titu">
            <h1> DETALLE DE VENTA</h1>
          </div>
          <div class="table-responsive">
            <div class="table">
              <table ng-controller="ctrl">
                <tr  class="bg-warning" >
                  <th>PRODUCTO</th>
                  <th>CANTIDAD</th>
                  <th>PRECIO</th>
                  <th>SUBTOTAL</th>
                </tr>
                <% for (var i = items.length - 1; i >= 0; i--) { %>
                <tr>
                  <td><%= items[i].nombre %></td>
                  <td><%= items[i].cantidad %></td>
                  <td>$ <%= items[i].precio %></td>
                  <td>$ <%= items[i].cantidad*items[i].precio %></td>
                </tr>
                <% } %>
              </table>
            </div>
          </div>
<a href="/adminpanel"><button class="btn btn-warning"><span class="glyphicon glyphicon-arrow-left"></span> VOLVER A VENTAS</button></a>
        </div>
      
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.5/angular.min.js" > </script>
        <script src="https://code.angularjs.org/1.6.5/angular-route.min.js"></script>
        <script src="js/jquery-3.2.1.min.js"></script>
        <script src="js/bootstrap.min.js"></script>

        <script src="js/app.js"></script>
        <script src="js/shop.js"></script>
    </body>
</html>